{% block swag_customized_products_option_type_template_datetime %}
    {# ToDo CUS-7 - props.timeEnabled should be added to the admin form #}
    {% set enableTime = 'false' %}

    {% set pickerProperties = '{
        "locale": "' ~ app.request.locale ~ '",
        "enableTime": ' ~ enableTime ~ ',
        "minDate": "' ~ props.minDate ~ '",
        "maxDate": "' ~ props.maxDate ~ '",
        "allowInput": "false",
        "selectors": {
            "openButton": "#open-button-option-id-' ~ option.id ~ '",
            "clearButton": "#clear-button-option-id-' ~ option.id ~ '"
        }
    }' %}

    {% sw_include customizedProductsOptionTemplatePrefix ~ 'datepicker/component.html.twig' with {
        'pickerProperties': pickerProperties,
        'type': 'date'
    } %}
{% endblock %}
