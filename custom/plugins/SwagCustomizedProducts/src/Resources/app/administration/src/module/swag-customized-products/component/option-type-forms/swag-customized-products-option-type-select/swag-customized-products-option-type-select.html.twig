{% block swag_customized_products_option_type_base_tree_content_root_component %}
    {% block swag_customized_products_option_type_select_field_container %}
        <sw-container
                columns="1fr 1fr"
                gap="30px">

            {% block swag_customized_products_option_type_select_field_placeholder %}
                <sw-text-field
                    {% if VUE3 %}
                        v-model:value="option.placeholder"
                    {% else %}
                        v-model="option.placeholder"
                    {% endif %}
                    class="swag-customized-products-option-type-select__field-placeholder"
                    :disabled="!acl.can('swag_customized_products_template.editor')"
                    :placeholder="$tc('swag-customized-products.optionDetailModal.optionType.placeholderPlaceholder')"
                    :label="$tc('swag-customized-products.optionDetailModal.optionType.placeholderLabel')">
                </sw-text-field>
            {% endblock %}

            {% block swag_customized_products_option_type_select_field_default %}
                <swag-customized-products-option-tree-default-select
                    :option="option"
                    :optionValues="optionValues">
                </swag-customized-products-option-tree-default-select>
            {% endblock %}

        </sw-container>
    {% endblock %}

    {% block swag_customized_products_option_type_select_field_dropdown %}
        <sw-checkbox-field
            class="swag-customized-products-option-type-select-is-drop-down__checkbox-field"
            :value="option.typeProperties.isDropDown"
            :label="$tc('swag-customized-products.optionDetailModal.optionType.select.isDropDownLabel')"
            :disabled="option.typeProperties.isMultiSelect || !acl.can('swag_customized_products_template.editor')"
            @change="changeIsDropDown">
        </sw-checkbox-field>
    {% endblock %}
{% endblock %}

{% block swag_customized_products_option_type_base_tree_content_component %}
{% endblock %}
