{% block swag_customized_products_option_type_base_content %}
    {% block swag_customized_products_option_type_datetime_field_group_general %}
        <sw-container class="swag-customized-products-option-type-textarea__field_group"
                      columns="repeat(auto-fit, minmax(250px, 1fr))"
                      gap="0px 30px">

            {% block swag_customized_products_option_type_datetime_field_group_content_general %}
                {% block swag_customized_products_option_type_textarea_field_item_number %}
                    <sw-text-field {% if VUE3 %}
                                       v-model:value="option.itemNumber"
                                   {% else %}
                                       v-model="option.itemNumber"
                                   {% endif %}
                                   :disabled="!acl.can('swag_customized_products_template.editor')"
                                   :placeholder="$tc('swag-customized-products.optionDetailModal.optionType.placeholderItemNumber')"
                                   :label="$tc('swag-customized-products.optionDetailModal.optionType.itemNumberLabel')"
                                   :helpText="$tc('swag-customized-products.optionDetailModal.optionType.itemNumberHelpText')">
                    </sw-text-field>
                {% endblock %}

                {% block swag_customized_products_option_type_datetime_field_group_placeholder %}
                    <sw-text-field {% if VUE3 %}
                                       v-model:value="option.placeholder"
                                   {% else %}
                                       v-model="option.placeholder"
                                   {% endif %}
                                   :disabled="!acl.can('swag_customized_products_template.editor')"
                                   class="swag-customized-products-option-type-textarea__field_placeholder"
                                   :placeholder="$tc('swag-customized-products.optionDetailModal.optionType.placeholderPlaceholder')"
                                   :label="$tc('swag-customized-products.optionDetailModal.optionType.placeholderLabel')">
                    </sw-text-field>
                {% endblock %}
            {% endblock %}
        </sw-container>
    {% endblock %}

    {% block swag_customized_products_option_type_datetime_field_group_datetime %}
        <sw-container class="swag-customized-products-option-type-textarea__field_group"
                      columns="repeat(auto-fit, minmax(250px, 1fr))"
                      gap="0px 30px">

            {% block swag_customized_products_option_type_datetime_field_group_content_datetime %}
                {% block swag_customized_products_option_type_datetime_field_group_min_date %}
                    <sw-datepicker
                        {% if VUE3 %}
                            v-model:value="option.typeProperties.minDate"
                        {% else %}
                            v-model="option.typeProperties.minDate"
                        {% endif %}
                        ref="minDateField"
                        name="sw-field--option-typeProperties-minDate"
                        :disabled="!acl.can('swag_customized_products_template.editor')"
                        :label="$tc('swag-customized-products.optionDetailModal.optionType.datetime.minDate')"
                        :config="minDateConfig"
                        dateType="date"
                        size="default">
                    </sw-datepicker>
                {% endblock %}

                {% block swag_customized_products_option_type_datetime_field_group_max_date %}
                    <sw-datepicker
                        {% if VUE3 %}
                            v-model:value="option.typeProperties.maxDate"
                            @base-field-mounted="initializeMinDate"
                        {% else %}
                            v-model="option.typeProperties.maxDate"
                        {% endif %}
                        ref="maxDateField"
                        name="sw-field--option-typeProperties-maxDate"
                        :disabled="!acl.can('swag_customized_products_template.editor')"
                        :label="$tc('swag-customized-products.optionDetailModal.optionType.datetime.maxDate')"
                        :config="maxDateConfig"
                        dateType="date"
                        size="default">
                    </sw-datepicker>
                {% endblock %}
            {% endblock %}
        </sw-container>
    {% endblock %}
{% endblock %}
