{% block swag_customized_products_option_type_base_tree_content_root_component %}
    {% block swag_customized_products_option_type_colorselect_field_container %}
        <sw-container
                columns="1fr 1fr"
                gap="30px">

            {% block swag_customized_products_option_type_colorselect_field_placeholder %}
                <sw-text-field
                        {% if VUE3 %}
                            v-model:value="option.placeholder"
                        {% else %}
                            v-model="option.placeholder"
                        {% endif %}
                        class="swag-customized-products-option-type-colorselect__field-placeholder"
                        :disabled="!acl.can('swag_customized_products_template.editor')"
                        :placeholder="$tc('swag-customized-products.optionDetailModal.optionType.placeholderPlaceholder')"
                        :label="$tc('swag-customized-products.optionDetailModal.optionType.placeholderLabel')">
                </sw-text-field>
            {% endblock %}

            {% block swag_customized_products_option_type_colorselect_field__default %}
                <swag-customized-products-option-tree-default-select
                        :option="option"
                        :optionValues="optionValues">
                </swag-customized-products-option-tree-default-select>
            {% endblock %}

        </sw-container>
    {% endblock %}
{% endblock %}

{% block swag_customized_products_option_type_base_tree_content_component %}
    <sw-colorpicker
            {% if VUE3 %}
                v-model:value="data.value._value"
            {% else %}
                v-model="data.value._value"
            {% endif %}
            class="swag-customized-products-option-type-select__field_value"
            :disabled="!acl.can('swag_customized_products_template.editor')"
            :label="$tc('swag-customized-products.detail.tabGeneral.labelColor')"
            :error="activeItemValueValueError"
            :zIndex="1000"
            colorOutput="hex"
            :readonly="true"
            required>
    </sw-colorpicker>
{% endblock %}
