<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="Swag\CustomizedProducts\Util\Logger" class="Monolog\Logger">
            <factory service="Shopware\Core\Framework\Log\LoggerFactory" method="createRotating"/>
            <argument type="string">swag_customized_products</argument>
        </service>

        <service id="Swag\CustomizedProducts\Template\ScheduledTask\CleanVersionsTask">
            <tag name="shopware.scheduled.task"/>
        </service>

         <service id="Swag\CustomizedProducts\Template\ScheduledTask\CleanVersionsTaskHandler">
            <argument type="service" id="scheduled_task.repository"/>
            <argument type="service" id="Doctrine\DBAL\Connection"/>
             <argument type="service" id="swag_customized_products_template.repository"/>
             <argument type="service" id="version.repository"/>
            <tag name="messenger.message_handler"/>
        </service>
    </services>
</container>
