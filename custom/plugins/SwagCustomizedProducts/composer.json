{
    "name": "swag/customized-products",
    "description": "Custom Products for Shopware 6",
    "version": "4.2.0",
    "type": "shopware-platform-plugin",
    "license": "proprietary",
    "authors": [
        {
            "name": "Shopware"
        }
    ],
    "require": {
        "shopware/core": "~6.5.0",
        "shopware/storefront": "~6.5.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~9.5.17",
        "symfony/phpunit-bridge": "~6.1.0",
        "phpstan/extension-installer": "^1.1.0",
        "phpstan/phpstan": "1.8.11",
        "phpstan/phpstan-doctrine": "1.3.21",
        "phpstan/phpstan-phpunit": "1.2.2",
        "phpstan/phpstan-symfony": "1.2.14",
        "kubawerlos/php-cs-fixer-custom-fixers": "~v3.10.1",
        "symplify/easy-coding-standard": "~10.2.3",
        "friendsofphp/php-cs-fixer": "~v3.8.0"
    },
    "extra": {
        "shopware-plugin-class": "Swag\\CustomizedProducts\\SwagCustomizedProducts",
        "copyright": "(c) by shopware AG",
        "label": {
            "de-DE": "Custom Products",
            "en-GB": "Custom Products"
        },
        "description": {
            "de-DE": "Sei individuell, lasse Produkte direkt von Deinen Kunden gestalten und hebe Dich von der Masse ab, denn DIY und Customizing liegen mehr im Trend als jemals zuvor.",
            "en-GB": "Be individual, have products designed directly by your customers and stand out from the crowd, because DIY and customizing are more in vogue than ever before."
        },
        "manufacturerLink": {
            "de-DE": "https://store.shopware.com/shopware-ag.html",
            "en-GB": "https://store.shopware.com/en/shopware-ag.html"
        },
        "supportLink": {
            "de-DE": "https://issues.shopware.com/",
            "en-GB": "https://issues.shopware.com/"
        }
    },
    "scripts": {
        "lint": [
            "@ecs-fix",
            "@phpstan",
            "@phpunit"
        ],
        "ecs": "../../../vendor/bin/ecs check src tests",
        "ecs-fix": "../../../vendor/bin/ecs check --fix src tests",
        "phpunit": "../../../vendor/bin/phpunit",
        "phpstan": [
            "php tests/phpstan/bootstrap.php",
            "../../../vendor/bin/phpstan analyze"
        ],
        "phpbench": [
            "@putenv ENABLE_COMMERCIAL=true",
            "../../../vendor/bin/phpbench run --report=compressed"
        ],
        "bc-check": [
            "@php ../../../vendor-bin/roave-backward-compatibility-check/bin/verify-version.php",
            "../../../vendor/bin/roave-backward-compatibility-check --from=$(git tag -l --sort -version:refname | head -n 1)"
        ],
        "npm:admin": [
            "export ADMIN_PATH=\"$PWD/../../../src/Administration/Resources/app/administration\"; npm --prefix $PWD/src/Resources/app/administration"
        ],
        "admin:unit": [
            "Composer\\Config::disableProcessTimeout",
            "@npm:admin run unit"
        ],
        "admin:unit:watch": [
            "Composer\\Config::disableProcessTimeout",
            "@npm:admin run unit-watch"
        ]
    },
    "autoload": {
        "psr-4": {
            "Swag\\CustomizedProducts\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Swag\\CustomizedProducts\\Test\\": "tests/",
            "SwagMigrationAssistant\\": "../SwagMigrationAssistant/",
            "SwagMigrationAssistant\\Test\\": "../SwagMigrationAssistant/Test/"
        }
    },
    "suggest": {
        "shopware/administration": "Require '*'. Allows you to to set up the plugin easily",
        "shopware/storefront": "Require '*'. Enables special features like configuring Custom Products on the product detail page."
    },
    "conflict": {
        "shopware/storefront": "<6,>=7",
        "shopware/administration": "<6,>=7"
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true,
            "symfony/runtime": true
        }
    }
}
