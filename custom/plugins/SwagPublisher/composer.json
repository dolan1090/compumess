{
    "name": "shopware/publisher",
    "description": "Publisher",
    "type": "shopware-platform-plugin",
    "license": "proprietary",
    "version": "2.1.0",
    "autoload": {
        "psr-4": {
            "SwagPublisher\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SwagPublisherTest\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Shopware",
            "role": "Manufacturer"
        }
    ],
    "require": {
        "shopware/core": "~6.5",
        "shopware/storefront": "~6.5"
    },
    "require-dev": {
        "ext-json": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "extra": {
        "shopware-plugin-class": "SwagPublisher\\SwagPublisher",
        "copyright": "(c) by shopware AG",
        "label": {
            "de-DE": "Shopware Publisher",
            "en-GB": "Shopware Publisher"
        },
        "description": {
            "de-DE": "Benutzerdefinierter Veröffentlichung für Erlebniswelten: Speichere CMS-Seiten als Entwurf, rufe eine Storefront-Vorschau aus dem Modul heraus auf und veröffentliche sie später.",
            "en-GB": "Custom publishing workflow for Shopping Experiences: Save CMS page changes as drafts, get a Storefront preview from within the module and publish them later."
        },
        "manufacturerLink": {
            "de-DE": "https://store.shopware.com/listing/manufacturer/sSupplier/25?p=1",
            "en-GB": "https://store.shopware.com/en/listing/manufacturer/sSupplier/25?p=1"
        },
        "supportLink": {
            "de-DE": "https://issues.shopware.com/",
            "en-GB": "https://issues.shopware.com/"
        }
    },
    "suggest": {
        "shopware/administration": "Require '*'. Allows you to to set up the plugin easily"
    },
    "conflict": {
        "shopware/storefront": "<6,>=7",
        "shopware/administration": "<6,>=7"
    },
    "repositories": {
        "platform-packages": {
            "type": "path",
            "url": "../../../src/*",
            "canonical": true
        }
    },
    "config": {
        "platform": {
            "php": "8.1"
        }
    },
    "scripts": {
        "init:js:administration": "npm --prefix=src/Resources/app/administration install ",
        "unit:php": "php ./../../../vendor/bin/phpunit --configuration phpunit.xml.dist",
        "unit:php-coverage": "@unit:php -d pcov.enabled=1 -d pcov.directory=./src --coverage-html ./build/artifacts/phpunit-coverage",
        "unit:administration": "npm --prefix=src/Resources/app/administration run unit",
        "phpstan": "php ./../../../vendor/bin/phpstan analyze",
        "ecs": "php ../../../vendor/bin/ecs check --config=./ecs.php ./src ./tests",
        "ecs-fix": "@ecs --fix"
    }
}
