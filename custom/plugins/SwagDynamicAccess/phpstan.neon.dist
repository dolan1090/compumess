includes:
    - ../../../vendor/phpstan/phpstan/conf/bleedingEdge.neon
    - phpstan-baseline.neon

parameters:
    level: 8
    tmpDir: var/cache/phpstan
    inferPrivatePropertyTypeFromConstructor: true
    checkMissingIterableValueType: false

    bootstrapFiles:
        - ../../../src/Core/DevOps/StaticAnalyze/phpstan-bootstrap.php
    # run `php vendor/shopware/core/DevOps/StaticAnalyze/PHPStan/phpstan-bootstrap.php` to create the container
    symfony:
        constant_hassers: false
        container_xml_path: '../../../var/cache/phpstan_dev/Shopware_Core_DevOps_StaticAnalyze_StaticAnalyzeKernelPhpstan_devDebugContainer.xml'
        console_application_loader: vendor/shopware/core/DevOps/StaticAnalyze/PHPStan/console-application.php
    paths:
        - src
        - tests
    excludePaths:
        - vendor/*
        - var/*
        - tests/TestBootstrapper.php
        - src/ElasticSearch/ProductEsDefinitionDecorator.php # Compatibility with EnterpriseSearch
        - src/ElasticSearch/CategoryEsDefinitionDecorator.php # Compatibility with EnterpriseSearch
