{% block sw_sales_channel_detail_domains_column_action_domain_delete %}
    <sw-context-menu-item
        :disabled="disableEdit || isLoading || isUsedBySocialShoppingSalesChannel(item)"
        variant="danger"
        @click="onClickDeleteDomain(item)"
        v-tooltip="{
            message: $tc('swag-social-shopping.extension.sw-sales-channel.detail.domains.isUsedBySocialShoppingTooltip'),
            disabled: !isUsedBySocialShoppingSalesChannel(item),
            showOnDisabledElements: true
        }"
    >
        {{ $tc('sw-sales-channel.detail.buttonDeleteDomain') }}
    </sw-context-menu-item>
{% endblock %}
