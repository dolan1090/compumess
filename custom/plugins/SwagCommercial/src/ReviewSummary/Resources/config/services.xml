<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="shopware.openai.client" class="GuzzleHttp\Client"/>

        <service id="Shopware\Commercial\ReviewSummary\Entity\ProductReviewSummary\ProductReviewSummaryDefinition">
            <tag name="shopware.entity.definition"/>
        </service>

        <service id="Shopware\Commercial\ReviewSummary\Extension\Product\ProductReviewSummaryExtension">
            <tag name="shopware.entity.extension"/>
        </service>

        <service id="Shopware\Commercial\ReviewSummary\Entity\ProductReviewSummaryTranslation\ProductReviewSummaryTranslationDefinition">
            <tag name="shopware.entity.definition"/>
        </service>

        <service id="Shopware\Commercial\ReviewSummary\Domain\Product\Review\ReviewSummaryGenerator" public="true">
            <argument type="service" id="shopware.openai.client"/>
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService"/>
        </service>

        <service id="Shopware\Commercial\ReviewSummary\Domain\Product\Review\GenerationContextFactory">
            <argument type="service" id="Doctrine\DBAL\Connection"/>
            <argument type="service" id="product_review.repository"/>
        </service>

        <service id="Shopware\Commercial\ReviewSummary\Api\ReviewSummaryGeneratorController" public="true">
            <argument type="service" id="Shopware\Commercial\ReviewSummary\Domain\Product\Review\ReviewSummaryGenerator"/>
            <argument type="service" id="Shopware\Commercial\ReviewSummary\Domain\Product\Review\GenerationContextFactory"/>
            <argument type="service" id="Doctrine\DBAL\Connection"/>
            <argument type="service" id="sales_channel.repository"/>
            <argument type="service" id="messenger.bus.shopware"/>

            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="Shopware\Commercial\ReviewSummary\Subscriber\ProductPageSubscriber">
            <tag name="kernel.event_subscriber"/>
        </service>
    </services>
</container>
