<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <parameters>
        <parameter key="csv.max_file_size">100</parameter>
        <parameter key="csv.supported_file_type">csv</parameter>
    </parameters>

    <services>
        <service id="Shopware\Commercial\B2B\QuickOrder\Storefront\AccountQuickOrderController" public="true">
            <argument type="service" id="Shopware\Commercial\B2B\QuickOrder\Page\AccountQuickOrderPageLoader"/>
            <argument type="service" id="Shopware\Commercial\B2B\QuickOrder\Domain\CustomerSpecificFeature\CustomerSpecificFeatureService"/>
            <argument type="service" id="Shopware\Commercial\B2B\QuickOrder\SalesChannel\Account\QuickOrderSearchProductRoute"/>
            <argument type="service" id="Shopware\Commercial\B2B\QuickOrder\SalesChannel\Account\QuickOrderProcessFileRoute"/>

            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
            <call method="setTwig">
                <argument type="service" id="twig"/>
            </call>
        </service>

        <service id="Shopware\Commercial\B2B\QuickOrder\Domain\File\CsvReader">
        </service>

        <service id="Shopware\Commercial\B2B\QuickOrder\Domain\File\CsvDeleter">
        </service>

        <service id="Shopware\Commercial\B2B\QuickOrder\Page\AccountQuickOrderPageLoader">
            <argument type="service" id="Shopware\Storefront\Page\GenericPageLoader"/>
        </service>

        <service id="Shopware\Commercial\B2B\QuickOrder\Extension\CustomerExtension">
            <tag name="shopware.entity.extension"/>
        </service>

        <service id="Shopware\Commercial\B2B\QuickOrder\Entity\CustomerSpecificFeaturesDefinition">
            <tag name="shopware.entity.definition" entity="customer_specific_features" />
        </service>

        <service id="Shopware\Commercial\B2B\QuickOrder\Domain\CustomerSpecificFeature\CustomerSpecificFeatureService">
            <argument type="service" id="Doctrine\DBAL\Connection"/>

            <tag name="kernel.reset" method="reset"/>
        </service>

        <service id="Shopware\Commercial\B2B\QuickOrder\Api\Annotation\CustomerSpecificFeatureActivated">
            <argument type="service" id="Shopware\Commercial\B2B\QuickOrder\Domain\CustomerSpecificFeature\CustomerSpecificFeatureService"/>
            <tag name="kernel.event_subscriber"/>
        </service>

        <service id="Shopware\Commercial\B2B\QuickOrder\Storefront\Framework\Twig\Extension\CustomerSpecificFeatureTwigExtension">
            <argument type="service" id="Shopware\Commercial\B2B\QuickOrder\Domain\CustomerSpecificFeature\CustomerSpecificFeatureService"/>

            <tag name="twig.extension"/>
        </service>

        <service id="Shopware\Commercial\B2B\QuickOrder\SalesChannel\Account\QuickOrderSearchProductRoute">
            <argument type="service" id="Shopware\Core\Content\Product\SearchKeyword\ProductSearchBuilderInterface"/>
            <argument type="service" id="Shopware\Core\Content\Product\SalesChannel\ProductListRoute"/>
            <argument type="service" id="Shopware\Commercial\B2B\QuickOrder\Domain\CustomerSpecificFeature\CustomerSpecificFeatureService"/>
        </service>

        <service id="Shopware\Commercial\B2B\QuickOrder\SalesChannel\Account\QuickOrderProcessFileRoute">
            <argument type="service" id="Shopware\Core\Content\Product\SalesChannel\ProductListRoute"/>
            <argument type="service" id="Shopware\Commercial\B2B\QuickOrder\Domain\CustomerSpecificFeature\CustomerSpecificFeatureService"/>
            <argument type="service" id="Shopware\Commercial\B2B\QuickOrder\Domain\File\CsvReader"/>
            <argument type="service" id="Shopware\Commercial\B2B\QuickOrder\Domain\File\CsvDeleter"/>
            <argument>%csv.max_file_size%</argument>
            <argument>%csv.supported_file_type%</argument>
        </service>
    </services>
</container>
