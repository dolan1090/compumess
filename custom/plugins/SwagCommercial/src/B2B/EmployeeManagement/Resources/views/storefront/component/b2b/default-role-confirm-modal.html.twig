{% block b2b_components_default_role_modal %}
    {% set options = {
        defaultRoleSwitchId,
        confirmButtonId: 'b2b-role-default-modal-confirm-button',
    } %}

    <div
        id="{{ defaultRoleModalId }}"
        class="modal fade"
        tabindex="-1"
        aria-labelledby="b2b-default-role-modal-title"
        aria-hidden="true"
        data-b2b-restore-switch="true"
        data-b2b-restore-switch-options="{{ options|json_encode() }}"
    >
        <div class="modal-dialog">
            <div class="modal-content">
                {% block b2b_components_default_role_modal_header %}
                    <div class="b2b-default-role-modal-header modal-header">
                        <h5 class="modal-title" id="b2b-default-role-modal-title">
                            {{ 'employee-management.roleCreate.defaultModalTitle'|trans|sw_sanitize }}
                        </h5>
                        <button
                            type="button"
                            class="btn-close"
                            data-bs-dismiss="modal"
                            aria-label="{{ 'global.default.cancel'|trans|sw_sanitize }}"
                        ></button>
                    </div>
                {% endblock %}

                {% block b2b_components_default_role_modal_body %}
                    <div class="b2b-default-role-modal-body modal-body">
                        <p id="b2b-default-role-modal-content">
                            {{ 'employee-management.roleCreate.defaultModalText'|trans|sw_sanitize }}
                        </p>
                    </div>
                {% endblock %}

                {% block b2b_components_default_role_modal_footer %}
                    <div class="b2b-default-role-modal-footer modal-footer">
                        <button
                            type="button"
                            id="b2b-default-role-modal-cancel"
                            class="btn btn-light"
                            data-bs-dismiss="modal"
                        >
                            {{ 'global.default.cancel'|trans|sw_sanitize }}
                        </button>
                        <button
                            type="button"
                            id="{{ options.confirmButtonId }}"
                            class="btn btn-primary"
                            data-bs-dismiss="modal"
                        >
                            {{ 'global.default.confirm'|trans|sw_sanitize }}
                        </button>
                    </div>
                {% endblock %}
            </div>
        </div>
    </div>
{% endblock %}
