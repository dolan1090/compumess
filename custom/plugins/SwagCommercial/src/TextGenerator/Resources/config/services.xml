<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="shopware.openai.client" class="GuzzleHttp\Client"/>

        <service id="Shopware\Commercial\TextGenerator\Domain\Product\DescriptionGenerator" public="true">
            <argument type="service" id="Doctrine\DBAL\Connection"/>
            <argument type="service" id="shopware.openai.client"/>
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService"/>

            <argument type="service" id="Shopware\Core\Framework\DataAbstractionLayer\Search\Term\Tokenizer"/>
        </service>

        <service id="Shopware\Commercial\TextGenerator\Api\TextGeneratorController" public="true">
            <argument type="service" id="Shopware\Commercial\TextGenerator\Domain\Product\DescriptionGenerator"/>

            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>
    </services>
</container>
