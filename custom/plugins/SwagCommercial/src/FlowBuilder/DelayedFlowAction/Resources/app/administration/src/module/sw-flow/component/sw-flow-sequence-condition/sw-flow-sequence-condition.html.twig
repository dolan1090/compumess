{% block sw_flow_sequence_condition_true_arrow_extension_options %}
    <sw-context-menu-item
        class="sw-flow-sequence-condition__add-true-action"
        :disabled="disabled"
        @click="addDelayAction(true)"
    >
        {{ $tc('sw-flow-delay.detail.sequence.selectorDelayAction') }}
    </sw-context-menu-item>
{% endblock %}

{% block sw_flow_sequence_condition_false_arrow_extension_options %}
    <sw-context-menu-item
        class="sw-flow-sequence-condition__add-false-action"
        :disabled="disabled"
        @click="addDelayAction(false)"
    >
        {{ $tc('sw-flow-delay.detail.sequence.selectorDelayAction') }}
    </sw-context-menu-item>
{% endblock %}
