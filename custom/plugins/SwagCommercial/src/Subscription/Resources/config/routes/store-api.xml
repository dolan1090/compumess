<?xml version="1.0" encoding="UTF-8" ?>
<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing
        https://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="store-api.subscription.checkout.cart.read"
           path="/store-api/subscription/checkout/cart"
           methods="GET|POST"
           controller="subscription.cart.route.load::load">
        <default key="_routeScope"><list><string>store-api</string></list></default>
        <default key="_subscriptionCart">true</default>
        <default key="_subscriptionContext">true</default>
        <condition>service('license').check('SUBSCRIPTIONS-2437281')</condition>
    </route>

    <route id="store-api.subscription.checkout.cart.order"
           path="/store-api/subscription/checkout/order"
           methods="POST"
           controller="subscription.cart.route.order::order">
        <default key="_loginRequired">true</default>
        <default key="_loginRequiredAllowGuest">true</default>
        <default key="_routeScope"><list><string>store-api</string></list></default>
        <default key="_subscriptionCart">true</default>
        <default key="_subscriptionContext">true</default>
        <condition>service('license').check('SUBSCRIPTIONS-2437281')</condition>
    </route>

    <route id="store-api.subscription.checkout.cart.delete"
           path="/store-api/subscription/checkout/cart"
           methods="DELETE"
           controller="subscription.cart.route.delete::delete">
        <default key="_routeScope"><list><string>store-api</string></list></default>
        <default key="_subscriptionCart">true</default>
        <default key="_subscriptionContext">true</default>
        <condition>service('license').check('SUBSCRIPTIONS-2437281')</condition>
    </route>

    <route id="store-api.subscription.checkout.cart.add"
           path="/store-api/subscription/checkout/cart/line-item"
           methods="POST"
           controller="subscription.cart.route.line-item.add::add">
        <default key="_routeScope"><list><string>store-api</string></list></default>
        <default key="_subscriptionCart">true</default>
        <default key="_subscriptionContext">true</default>
        <condition>service('license').check('SUBSCRIPTIONS-2437281')</condition>
    </route>

    <route id="store-api.subscription.checkout.cart.update-lineitem"
           path="/store-api/subscription/checkout/cart/line-item"
           methods="PATCH"
           controller="subscription.cart.route.line-item.update::change">
        <default key="_routeScope"><list><string>store-api</string></list></default>
        <default key="_subscriptionCart">true</default>
        <default key="_subscriptionContext">true</default>
        <condition>service('license').check('SUBSCRIPTIONS-2437281')</condition>
    </route>

    <route id="store-api.subscription.checkout.cart.remove-item"
           path="/store-api/subscription/checkout/cart/line-item"
           methods="DELETE"
           controller="subscription.cart.route.line-item.remove::remove">
        <default key="_routeScope"><list><string>store-api</string></list></default>
        <default key="_subscriptionCart">true</default>
        <default key="_subscriptionContext">true</default>
        <condition>service('license').check('SUBSCRIPTIONS-2437281')</condition>
    </route>
</routes>
