<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="Shopware\Commercial\Subscription\Api\Route\Subscription\SubscriptionActivateRoute" public="true">
            <argument type="service" id="Shopware\Commercial\Subscription\Entity\Subscription\Aggregate\SubscriptionStateHandler"/>
        </service>

        <service id="Shopware\Commercial\Subscription\Api\Route\Subscription\SubscriptionCancelRoute" public="true">
            <argument type="service" id="Shopware\Commercial\Subscription\Entity\Subscription\Aggregate\SubscriptionStateHandler"/>
            <argument type="service" id="subscription.repository" />
        </service>

        <service id="Shopware\Commercial\Subscription\Api\Route\Subscription\SubscriptionPauseRoute" public="true">
            <argument type="service" id="Shopware\Commercial\Subscription\Entity\Subscription\Aggregate\SubscriptionStateHandler"/>
        </service>
    </services>
</container>
