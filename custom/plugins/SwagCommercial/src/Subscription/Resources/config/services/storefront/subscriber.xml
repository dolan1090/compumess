<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="Shopware\Commercial\Subscription\Storefront\StorefrontSubscriber">
            <argument type="service" id="Doctrine\DBAL\Connection" />
            <argument type="service" id="request_stack" />
            <argument type="service" id="router" />

            <tag name="kernel.event_subscriber" />
        </service>

        <service id="Shopware\Commercial\Subscription\Checkout\Order\SubscriptionAccountEditOrderSubscriber">
            <tag name="kernel.event_subscriber" />
        </service>

        <service id="Shopware\Commercial\Subscription\Storefront\TemplateDataExtension">
            <argument type="service" id="request_stack"/>
            <tag name="twig.extension" priority="-100"/>
        </service>
    </services>
</container>
