{% sw_extends {
    template: "@Storefront/storefront/page/checkout/confirm/index.html.twig",
    scopes: ['subscription']
} %}

{% block page_checkout_aside_actions %}
    {% if getLicense('SUBSCRIPTIONS-6549379') %}
        {% set confirmOrderFormAction = path('frontend.subscription.checkout.finish.order', { subscriptionToken: context.token }) %}
    {% endif %}

    {{ parent() }}
{% endblock %}

{% block page_checkout_confirm_table_item %}
    {% if getLicense('SUBSCRIPTIONS-6549379') %}
        {% sw_include '@Storefront/storefront/component/line-item/line-item.html.twig' with {
            redirectTo: 'frontend.subscription.checkout.confirm.page',
            redirectParameters: {subscriptionToken: context.token}|json_encode,
            showTaxPrice: true
        } %}
    {% else %}
        {{ parent() }}
    {% endif %}
{% endblock %}

{% block page_checkout_confirm_form_submit %}
    {% if getLicense('SUBSCRIPTIONS-6549379') %}
        {% sw_include '@SwagCommercial/storefront/subscriptions/submit-disclaimer.html.twig' %}
    {% endif %}

    {{ parent() }}
{% endblock %}
