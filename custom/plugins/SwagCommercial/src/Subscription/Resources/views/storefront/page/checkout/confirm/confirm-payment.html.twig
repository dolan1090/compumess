{% sw_extends {
    template: "@Storefront/storefront/page/checkout/confirm/confirm-payment.html.twig",
    scopes: ['subscription']
} %}

{% block page_checkout_change_payment_form %}
    {% if getLicense('SUBSCRIPTIONS-6549379') %}
        {% sw_include '@Storefront/storefront/component/payment/payment-form.html.twig' with {
            'action': 'frontend.subscription.checkout.configure',
            'actionPath': path('frontend.subscription.checkout.configure', {subscriptionToken: context.token}),
            'redirect': 'frontend.subscription.checkout.confirm.page',
            'redirectParameters': {redirected: 0, subscriptionToken: context.token}|json_encode,
        } %}
    {% else %}
        {{ parent() }}
    {% endif %}
{% endblock %}
