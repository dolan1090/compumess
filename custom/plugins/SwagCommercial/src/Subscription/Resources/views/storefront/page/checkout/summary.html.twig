{% sw_extends {
    template: "@Storefront/storefront/page/checkout/summary.html.twig",
    scopes: ['default', 'subscription']}
%}

{% block page_checkout_summary_inner %}

    {{ parent() }}

    {% if getLicense('SUBSCRIPTIONS-6549379') %}
        {% set subscription = context.extensions.subscription ? context.extensions.subscription : page.order.extensions.subscription %}

        {% if subscription %}
            {% sw_include '@SwagCommercial/storefront/subscriptions/summary-recurring-total.html.twig' %}
        {% endif %}
    {% endif %}

{% endblock %}
