{% sw_extends '@Storefront/storefront/page/account/sidebar.html.twig' %}

{% block page_account_sidebar_menu %}
        {% if not context.customer.guest %}
            <div class="list-group list-group-flush account-aside-list-group">
                {{ parent() }}

                {% if getLicense('SUBSCRIPTIONS-6549379') %}
                    {% block page_account_sidebar_link_subscriptions %}
                        {% set validRoutes = ['frontend.account.subscription.page', 'frontend.account.subscription.detail.page'] %}

                        <a href="{{ path('frontend.account.subscription.page') }}"
                           title="{{ "commercial.subscriptions.account.subscriptionsLink"|trans|sw_sanitize }}"
                           class="list-group-item list-group-item-action account-aside-item{% if activeRoute in validRoutes %} is-active{% endif %}">
                            {{ "commercial.subscriptions.account.subscriptionsLink"|trans|sw_sanitize }}
                        </a>
                    {% endblock %}
                {% endif %}
            </div>
    {% endif %}
{% endblock %}
