<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="shopware.openai.client" class="GuzzleHttp\Client"/>

        <service id="Shopware\Commercial\CheckoutSweetener\Domain\Checkout\SweetenerGenerator" public="true">
            <argument type="service" id="locale.repository"/>
            <argument type="service" id="shopware.openai.client"/>
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService"/>
        </service>

        <service id="Shopware\Commercial\CheckoutSweetener\Api\SweetenerController" public="true">
            <argument type="service" id="Shopware\Commercial\CheckoutSweetener\Domain\Checkout\SweetenerGenerator"/>
            <argument type="service" id="product.repository"/>

            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="Shopware\Commercial\CheckoutSweetener\SalesChannel\CheckoutSweetenerRoute" public="true">
            <argument type="service" id="Shopware\Commercial\CheckoutSweetener\Domain\Checkout\SweetenerGenerator"/>
            <argument type="service" id="order.repository"/>
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService"/>
        </service>

        <service id="Shopware\Commercial\CheckoutSweetener\Controller\CheckoutSweetenerController" public="true">
            <argument type="service" id="Shopware\Commercial\CheckoutSweetener\SalesChannel\CheckoutSweetenerRoute"/>

            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>
    </services>
</container>
