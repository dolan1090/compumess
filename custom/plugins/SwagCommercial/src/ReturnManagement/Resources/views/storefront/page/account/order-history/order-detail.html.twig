{% sw_extends '@Storefront/storefront/page/account/order-history/order-detail.html.twig' %}

{% set orderHasLineItemStatus = order.lineItems|filter(lineItem => lineItem.extensions.state is not null)|length %}

{% block page_account_order_item_detail_table_header_name %}
    <div class="{% if orderHasLineItemStatus %}col-5{% else %}col-6{% endif %} order-detail-content-header-cell order-header-name">
        {{ "account.orderItemColumnName"|trans|sw_sanitize }}
    </div>

    {% if orderHasLineItemStatus %}
        {% block page_account_order_item_detail_table_header_status %}
            <div class="col-2 order-detail-content-header-cell order-header-status">
                {{ "swag-return-management.account.orderItemColumnStatus"|trans|sw_sanitize }}
            </div>
        {% endblock %}

        <div class="col-1 order-detail-content-header-cell order-header-quantity">
            {{ "account.orderItemColumnQuantity"|trans|sw_sanitize }}
        </div>
    {% endif %}
{% endblock %}

{% block page_account_order_item_detail_table_header_quantity %}
    {% if not orderHasLineItemStatus %}
        {{ parent() }}
    {% endif %}
{% endblock %}
