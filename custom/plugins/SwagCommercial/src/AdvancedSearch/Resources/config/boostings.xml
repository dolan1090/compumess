<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="Shopware\Commercial\AdvancedSearch\Domain\Boosting\StreamResolver\EntityStreamResolverRegistry">
            <argument type="tagged" tag="advanced_search.stream_resolver"/>
        </service>

        <service id="Shopware\Commercial\AdvancedSearch\Domain\Boosting\BoostingLoader">
            <argument type="service" id="Doctrine\DBAL\Connection"/>

            <tag name="kernel.event_subscriber"/>
        </service>

        <service id="Shopware\Commercial\AdvancedSearch\Domain\Boosting\BoostingQueryBuilder">
            <argument type="service" id="Shopware\Commercial\AdvancedSearch\Domain\Boosting\BoostingLoader"/>
            <argument type="service" id="Shopware\Commercial\AdvancedSearch\Domain\Boosting\StreamResolver\EntityStreamResolverRegistry"/>
            <argument type="service" id="Shopware\Elasticsearch\Framework\DataAbstractionLayer\CriteriaParser"/>
        </service>

        <service id="Shopware\Commercial\AdvancedSearch\Entity\Boosting\BoostingDefinition">
            <tag name="shopware.entity.definition"/>
        </service>

        <service id="Shopware\Commercial\AdvancedSearch\Domain\Boosting\StreamResolver\ProductStreamResolver">
            <argument type="service" id="Doctrine\DBAL\Connection"/>

            <tag name="advanced_search.stream_resolver"/>
        </service>

        <service id="Shopware\Commercial\AdvancedSearch\Domain\Boosting\StreamResolver\ProductManufacturerStreamResolver" class="Shopware\Commercial\AdvancedSearch\Domain\Boosting\StreamResolver\EntityStreamResolver">
            <argument type="service" id="Doctrine\DBAL\Connection"/>
            <argument type="service" id="Shopware\Core\Content\Product\Aggregate\ProductManufacturer\ProductManufacturerDefinition"/>

            <tag name="advanced_search.stream_resolver"/>
        </service>

        <service id="Shopware\Commercial\AdvancedSearch\Domain\Boosting\StreamResolver\CategoryStreamResolver" class="Shopware\Commercial\AdvancedSearch\Domain\Boosting\StreamResolver\EntityStreamResolver">
            <argument type="service" id="Doctrine\DBAL\Connection"/>
            <argument type="service" id="Shopware\Core\Content\Category\CategoryDefinition"/>

            <tag name="advanced_search.stream_resolver"/>
        </service>

        <service id="Shopware\Commercial\AdvancedSearch\Entity\EntityStream\EntityStreamDefinition">
            <tag name="shopware.entity.definition"/>
        </service>

        <service id="Shopware\Commercial\AdvancedSearch\Entity\EntityStream\Aggregate\EntityStreamFilterDefinition">
            <tag name="shopware.entity.definition"/>
        </service>

        <service id="category.entity_stream_indexer" class="Shopware\Commercial\AdvancedSearch\Domain\Boosting\EntityStream\Indexing\EntityStreamEntityIndexer" public="true">
            <argument type="service" id="Doctrine\DBAL\Connection"/>
            <argument type="service" id="serializer"/>
            <argument type="service" id="Shopware\Core\Framework\DataAbstractionLayer\Dbal\Common\IteratorFactory"/>
            <argument type="service" id="Shopware\Core\Content\Category\CategoryDefinition"/>

            <tag name="shopware.entity_indexer"/>
        </service>

        <service id="product_manufacturer.entity_stream_indexer" class="Shopware\Commercial\AdvancedSearch\Domain\Boosting\EntityStream\Indexing\EntityStreamEntityIndexer" public="true">
            <argument type="service" id="Doctrine\DBAL\Connection"/>
            <argument type="service" id="serializer"/>
            <argument type="service" id="Shopware\Core\Framework\DataAbstractionLayer\Dbal\Common\IteratorFactory"/>
            <argument type="service" id="Shopware\Core\Content\Product\Aggregate\ProductManufacturer\ProductManufacturerDefinition"/>

            <tag name="shopware.entity_indexer"/>
        </service>
    </services>
</container>
