{% block sw_settings_search_search_behaviour_condition %}
<sw-radio-field
    v-model="advancedSearchConfig.andLogic"
    v-tooltip="{
        message: $tc('sw-privileges.tooltip.warning'),
        disabled: acl.can('product_search_config.editor'),
        showOnDisabledElements: true
    }"
    class="sw-settings-search__search-behaviour-condition"
    block
    :disabled="!acl.can('product_search_config.editor')"
    :options="conditionsOptions"
/>
{% endblock %}

{% block sw_settings_search_search_behaviour_search_term_length %}
<sw-container
    columns="1fr 1fr"
    gap="0 30px"
>
    <sw-number-field
        v-model="advancedSearchConfig.minSearchLength"
        v-tooltip="{
            message: $tc('sw-privileges.tooltip.warning'),
            disabled: acl.can('product_search_config.editor'),
            showOnDisabledElements: true
        }"
        class="sw-settings-search__search-behaviour-term-length"
        :label="$tc('sw-settings-search.generalTab.labelMinimalSearchTerm')"
        :disabled="!acl.can('product_search_config.editor')"
        :min="min"
        :max="max"
    />

    <sw-switch-field
        v-model="advancedSearchConfig.esEnabled"
        class="sw-settings-search-search-behaviour-search-enable-es-switch"
        bordered
        :help-text="$tc('swag-advanced-search.generalTab.helpTextEnableAdvancedSearch')"
        :label="$tc('swag-advanced-search.generalTab.labelEnableAdvancedSearch')"
    />
</sw-container>
{% endblock %}
